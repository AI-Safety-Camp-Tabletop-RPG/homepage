    @apply text-2xl
  }
  */
  .app-container {
    position: absolute;
    width: 100%;
  }
  .bg-glitch {
    opacity: 0.6;
    position: fixed;
    z-index: 0;
    top: -10em;
    left: -10em;
  }
}

@tailwind utilities;

@layer utilities {
  .highlighter, .highlighter-blue, .highlighter-pink {
    position: relative;
    z-index: 0;
    display: inline-block;
  }
  .highlighter::after, .highlighter-blue::after, .highlighter-pink::after {
    content: "";
    position: absolute;
    z-index: -1;
    top: 50%;
    left: -5%;
    display: block;
    width: 105%;
    height: 60%;
  }
  .highlighter::after {
    @apply bg-tttHighlightRed
  }
  .highlighter-blue::after {
    @apply bg-tttHighlightBlue
  }
  .highlighter-pink::after {
    @apply bg-tttHighlightPink
  }
}
