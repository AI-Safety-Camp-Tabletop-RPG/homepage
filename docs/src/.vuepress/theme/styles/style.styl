@tailwind base;
@layer base {
  html, body {
    @apply bg-black text-white font-mono font-light
  }
  // make images scale crispy
  img, canvas {
    image-rendering: -moz-crisp-edges;
    image-rendering: -webkit-crisp-edges;
    image-rendering: pixelated;
    image-rendering: crisp-edges;
  }
}
@tailwind components;
@layer components {
  .feature-block h2 {
    @apply text-3xl font-extralight
  }
  .feature-block p:first-of-type {
    @apply mt-10
  }
  .feature-block p {
    @apply text-base mt-8
  }
  .content__feature-1 h2 {
    // TODO improve highlight effect
    display: inline;
    background-repeat: no-repeat;
    background-size: 100% 0.8em;
    background-position: -2% 118%;
    background-image: linear-gradient(0deg, #ee00e1, #ee00e1);
  }
  .content__feature-2 h2 {
    // TODO improve highlight effect
    display: inline;
    background-repeat: no-repeat;
    background-size: 100% 0.8em;
    background-position: -2% 118%;
    background-image: linear-gradient(0deg, #0f2cff, #0f2cff);
  }

  /*
  .content__hero h1 {
